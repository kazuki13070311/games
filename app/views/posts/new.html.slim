.container
  .row
    .col-8.mx-auto.my-5
      br
      .card
        .card-body
          h1 投稿フォーム
          = form_with model: @post, local: true do |f|
            .form-group
              = f.label :title
              br
              = f.text_field :title, class: "form-control"
              br
            .form-group
              = f.label :description
              br
              = f.text_area :description, rows: 5, class: "form-control"
              br
            .form-group
              = f.submit '投稿'